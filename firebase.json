{
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "source": "firebase/functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "firebase/storage.rules"
  },
  "database": {
    "rules": "firebase/database.rules.json"
  },
  "emulators": {
    "database": {
      "host": "http://localhost",
      "port": "5003"
    },
    "firestore": {
      "host": "http://localhost",
      "port": "5002"
    },
    "functions": {
      "host": "http://localhost",
      "port": "5001"
    },
    "hosting": {
      "host": "http://localhost",
      "port": "5000"
    }
  }
}
