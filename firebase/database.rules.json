{
  "rules": {
    "posts": {
      "$id": {
        "replies": {
          ".read": "auth.uid != null",
          ".write": "auth.uid != null"
        }
      }
    },
    "courses": {
      "$id": {
        "discussions": {
          ".read": "auth.uid != null",
          ".write": "auth.uid != null"
        }
      }
    },
    "sessions": {
      "$id": {
        "chats": {
          ".read": "auth.uid != null",
          ".write": "auth.uid != null"
        }
      }
    },
    "subscriptions": {
      ".read": "true",
      ".write": "true"
    },
    "users": {
      "$id": {
        "notifications": {
          ".indexOn": ["dates/createdAt"],
          ".read": "auth.uid != null",
          ".write": "auth.uid != null"
        },
        "transactions": {
          ".read": "auth.uid != null",
          ".write": "auth.uid != null"
        }
      }
    },
    ".read": "false",
    ".write": "false"
  }
}
